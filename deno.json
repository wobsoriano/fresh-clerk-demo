{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update@2.0.0-alpha.29 ."
  },
  "fmt": { "semiColons": true, "singleQuote": true },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.29",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
    "preact": "npm:preact@^10.25.4",
    "@preact/signals": "npm:@preact/signals@^1.3.2",
    "tailwindcss": "npm:tailwindcss@^3.4.3",
    "@jsrob/fresh-clerk": "jsr:@jsrob/fresh-clerk@^0.1.1"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": ["a", "img", "source", "body", "html", "head"]
  },
  "nodeModulesDir": "auto"
}
